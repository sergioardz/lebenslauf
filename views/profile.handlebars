<div class="container">
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">My Profile.</h1>
        <p class="lead">My details.</p>
    </div>

    {{!-- <p>User Id: {{user_id}}</p> --}}

    
    <div class="row">
        <div class="col-sm-9">
            {{#each data}}
            <div class="card">
                <div class="card-header">
                    <h4><strong>General Information</strong></h4>
                </div>
                <div class="card-body">
                    <h4 id="cardname">{{dataValues.General.name}}</h4>
                    <div id="stats">
                        <h6><strong>Email: </strong><span id="cardemail">{{email}}</span></h6>
                        <h6><strong>Address: </strong><br><span id="cardaddress">{{dataValues.General.address1}}<br>
                            {{dataValues.General.address2}}<br>
                            {{dataValues.General.city}}, {{dataValues.General.state}}<br>
                            {{dataValues.General.zip}}</span></h6>
                        <h6><strong>Phone: </strong><span id="cardphone">{{dataValues.General.phone}}</span></h6>
                    </div>
                </div>
            </div>
            <br>
            {{/each}}
        </div>
    </div>

    <br>

    <div class="row">
        <div class="col-sm-9">
            <div class="card">
                <div class="card-header">
                    <h4><strong>General Information</strong></h4>
                </div>
                <div class="card-body">
                    <form action="/general" method="POST">
                        <div class="form-row">
                            <div class="form-group col-md-8">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" name="name" id="name" placeholder="Nombre Completo">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="phone">Phone number</label>
                                <input type="text" class="form-control" name="phone" id="phone" placeholder="Teléfono">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="address1">Address</label>
                                <input type="text" class="form-control" name="address1" id="address1" placeholder="Calle y número">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="address2">Address 2</label>
                                <input type="text" class="form-control" name="address2" id="address2" placeholder="Otros detalles">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-5">
                                <label for="city">City</label>
                                <input type="text" class="form-control" name="city" id="city" placeholder="Ciudad">
                            </div>
                            <div class="form-group col-md-5">
                                <label for="state">State</label>
                                <input type="text" class="form-control" name="state" id="state" placeholder="Estado">
                            </div>
                            <div class="form-group col-md-2">
                                <label for="zip">Zip</label>
                                <input type="text" class="form-control" name="zip" id="zip" placeholder="Código Postal">
                            </div>
                        </div>
                        <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>